{
  "name": "express-parcel-template",
  "version": "1.0.0",
  "description": "Express + Parcel template repo",
  "repository": "https://github.com/jayantbh/express-parcel-template",
  "author": "Jayant Bhawal <bhawal.jayant@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@parcel/transformer-sass": "2.0.0-beta.2",
    "concurrently": "^6.0.2",
    "hbs": "^4.1.2",
    "parcel": "^2.0.0-beta.2",
    "pg": "^8.6.0"
  },
  "dependencies": {
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "knex": "^0.95.4",
    "node-fetch": "^2.6.1",
    "socket.io": "^4.0.2"
  },
  "scripts": {
    "build-pages": "parcel build public/*.html",
    "watch-pages": "parcel watch public/*.html",
    "node-server": "node index.js",
    "watch-server": "nodemon index.js",
    "reset-db": "knex migrate:rollback --all && knex migrate:latest",
    "start": "concurrently \"yarn watch-pages\" \"yarn watch-server\""
  }
